{
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置, 参考 https://uniapp.dcloud.net.cn/component/uniui/quickstart.html
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  // 其他内容
  "pages": [
    // pages 数组中第一项表示应用启动页, 参考 https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/auth/index",
      "style": {
        "navigationBarTitleText": "Authentication"
      }
    },
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "Homepage"
      }
    },
    {
      "path": "pages/add-note/index",
      "style": {
        "navigationBarTitleText": "Add Note"
      }
    },
    {
      "path": "pages/self/index",
      "style": {
        "navigationBarTitleText": "Myself"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "fe-251030",
    "navigationBarBackgroundColor": "#fff",
    "backgroundColor": "#fff"
  },
  //
  "tabBar": {
    "backgroundColor": "#fff", // $uni-bg-color
    "borderStyle": "#c8c7cc", // $uni-border-color
    "color": "#000", // $uni-text-color
    "selectedColor": "#999", // $uni-text-color-grey
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "Homepage",
        "iconPath": "static/images/home.svg",
        "selectedIconPath": "static/images/home.svg"
      },
      {
        "pagePath": "pages/add-note/index",
        "text": "Add Note",
        "iconPath": "static/images/add-note.svg",
        "selectedIconPath": "static/images/add-note.svg"
      },
      {
        "pagePath": "pages/self/index",
        "text": "Myself",
        "iconPath": "static/images/self.svg",
        "selectedIconPath": "static/images/self.svg"
      }
    ]
  }
}
